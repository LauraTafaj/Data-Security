def rotX(message, key):
    cipher = ""
    for char in message:
        if char.isalpha():
            char_code = ord(char)
            char_code += key
            if char.isupper():
                if char_code > ord('Z'):
                    char_code -= 26
                elif char_code < ord('A'):
                    char_code += 26
            elif char.islower():
                if char_code > ord('z'):
                    char_code -= 26
                elif char_code < ord('a'):
                    char_code += 26
            cipher += chr(char_code)
        else:
            cipher += char
    return cipher

# SHEMBULL:
message = "Strive not to be a success, but rather to be of value"
key = 4
encrypted_message = rotX(message, key)
print("Mesazhi kryesore: ", message)
print("Mesazhi i enkriptuar: ", encrypted_message)

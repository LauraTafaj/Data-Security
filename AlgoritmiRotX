# Data-Security
def rotX(mesazhi, key):
    result = bytearray()
    for byte in mesazhi.encode('utf-8'):
        result.append((byte + key) % 256)
    return bytes(result)


class RotXAlgorithm:
    def __init__(self, key):
        self.key = key

    def createEncryptor(self):
        def enkriptor(mesazhi):
            return rotX(mesazhi, self.key)

        return enkriptor

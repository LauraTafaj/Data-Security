def encrypt_rotX(plain_text, key):
    cipher_text = ""
    for char in plain_text:
        if char.isalpha():
            base_char = 'A' if char.isupper() else 'a'
            offset = (ord(char) - ord(base_char) + key) % 26
            cipher_text += chr(ord(base_char) + offset)
        else:
            cipher_text += char
    return cipher_text

def decrypt_rotX(cipher_text, key):
    return encrypt_rotX(cipher_text, 26 - key)

message = "Strive not to be a success, but rather to be of value"
key = 4

encrypted_message = encrypt_rotX(message, key)
print("Mesazhi i enkriptuar:", encrypted_message)

decrypted_message = decrypt_rotX(encrypted_message, key)
print("Mesazhi i deenkriptuar:", decrypted_message)
